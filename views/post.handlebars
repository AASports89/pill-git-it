    <div id="image">
        <img style="margin-left: 35%; border: dashed 1px black" src="https://res.cloudinary.com/dhqsixgmo/image/upload/v1664851514/pill-git-it-images/white-tab_m8srwd.jpg">
    </div>
    <script>
$(document).ready(function() {
  $('#dropdown').on('change', function() {
   if (['capsule' , 'white' , 'round'].indexOf(this.value) > -1)
    {
      $("#image").show();
    }
    else 
    {
      $("#image").hide();
    }
    })
    .change();
    });
</script>
